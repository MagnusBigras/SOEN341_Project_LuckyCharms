@page
@model Lucky_Charm_Event_track.Pages.AdminPlatformOversightModel
@{
    ViewData["Title"] = "AdminPlatformOversight";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <!-- Sidebar navigation -->
    <div class="sidebar">
        <div class="sidebar-menu">

            <a asp-page="/AdminPlatformOversight" class="sidebar-link sidebar-item">
                <img src="~/Images/Your_paragraph_text-removebg-preview.png" class="sidebar-icon" alt="Platform Oversight">
                <span class="sidebar-text">Platform Oversight</span>
            </a>

            <a asp-page="/AdminAnalytics" class="sidebar-link sidebar-item active">
                <img src="~/Images/800ce0988c52dc7bded443567346a77035fb8534.png" class="sidebar-icon" alt="Analytics">
                <span class="sidebar-text">Analytics</span>
            </a>

            <a asp-page="/AdminManagement" class="sidebar-link sidebar-item">
                <img src="~/Images/Untitled_design__2_-removebg-preview.png" class="sidebar-icon" alt="Manage Organizations">
                <span class="sidebar-text">Manage Organizations</span>
            </a>

            <div class="sidebar-bar"></div>

            <div class="sidebar-extra">
                <div class="sidebar-item">
                    <img src="~/Images/7965593328e6cb27ffb10553f680443da25fad1a.png" class="sidebar-icon" alt="Organization Settings">
                    <span class="sidebar-text">Organization Settings</span>
                </div>
                <div class="sidebar-item">
                    <img src="~/Images/af7e2a95556abcf8c3cc0c41fedea581cd0f43af.png" class="sidebar-icon" alt="Sign out">
                    <span class="sidebar-text">Sign out</span>
                </div>
            </div>

        </div>
    </div>

    <!-- Top navigation bar -->
    <div class="top-navbar">
        <div class="navbar-left">
            <img src="~/Images/Green%20Classic%20Four%20Leaf%20Clover%20Geometric%20Logo.png" alt="Logo" class="logo">
        </div>
        <div class="navbar-right">
            <button class="account-btn">
                <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png" alt="User Avatar" class="account-img">
                <span class="account-name">@Model.FirstName</span>
            </button>
        </div>
    </div>

    <!-- Main content -->
    <div class="main-content">
        <!-- EVENTS LIST -->
        <h1 class="mb-2">Events – Platform Oversight</h1>
        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>Event</th>
                        <th>Organizer</th>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Status</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.Events)
                    {
                        <tr>
                            <td>
                                <strong>@e.EventName</strong><br />
                                <small>@e.Description</small>
                            </td>
                            <td>@e.StartTime?.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@e.Location</td>
                            <td>
                                @(e.IsActive ? "Active" : "Disabled")
                            </td>
                            <td class="text-right">
                                <form method="post" asp-page-handler="ApproveEvent" style="display:inline">
                                    <input type="hidden" name="eventId" value="@e.Id" />
                                    <button class="btn btn-primary" @(e.IsActive ? "disabled" : null)>Approve</button>
                                </form>
                                <form method="post" asp-page-handler="DisableEvent" style="display:inline;margin-left:.5rem">
                                    <input type="hidden" name="eventId" value="@e.Id" />
                                    <button class="btn btn-danger" @(e.IsActive ? null : "disabled")>Disable</button>
                                </form>
                                <form method="post" asp-page-handler="FlagEvent" style="display:inline;margin-left:.5rem">
                                    <input type="hidden" name="eventId" value="@e.Id" />
                                    <button class="btn btn-warning">Flag</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- ORGANIZER ACCOUNTS -->
        <h2 class="mt-3">Organizer Accounts</h2>
        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name / Email</th>
                        <th>Phone</th>
                        <th>Account Type</th>
                        <th>Active</th>
                        <th>Banned</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model.Organizers)
                    {
                        <tr>
                            <td>
                                <strong>@u.FullName</strong><br />
                                <small>@u.Email</small>
                            </td>
                            <td>@u.PhoneNumber</td>
                            <td>@u.AccountType</td>
                            <td>@(u.IsActive ? "Yes" : "No")</td>
                            <td>@(u.IsBanned ? "Yes" : "No")</td>
                            <td class="text-right">
                                <form method="post" asp-page-handler="ApproveOrganizer" style="display:inline">
                                    <input type="hidden" name="userId" value="@u.Id" />
                                    <button class="btn btn-primary" @(u.IsActive ? "disabled" : null)>Approve</button>
                                </form>
                                <form method="post" asp-page-handler="BanOrganizer" style="display:inline;margin-left:.5rem">
                                    <input type="hidden" name="userId" value="@u.Id" />
                                    <button class="btn btn-danger" @(u.IsBanned ? "disabled" : null)>Ban</button>
                                </form>
                                <form method="post" asp-page-handler="UnbanOrganizer" style="display:inline;margin-left:.5rem">
                                    <input type="hidden" name="userId" value="@u.Id" />
                                    <button class="btn btn-secondary" @(!u.IsBanned ? "disabled" : null)>Unban</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
