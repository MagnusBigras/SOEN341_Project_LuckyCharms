@page
@model Lucky_Charm_Event_track.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // render this page without the shared layout so its standalone CSS/HTML centers correctly
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/login_style.css">
</head>
<body>
    <div class="login-container">
    <img src="/Images/Green Classic Four Leaf Clover Geometric Logo.png" alt="Lucky Charm" class="logo" style="width:320px; height:auto;">

        <h2>Sign in</h2>
<form id="loginForm">
    <input type="text"  name="Login_UserName" id="Login_UserName" placeholder="Username" required>
            <input type="password" name="Login_Password" id="Login_Password" placeholder="Password" required>
    <label style="display:flex; align-items:center; gap:8px; margin-top:10px;">
        <input type="checkbox" id="isAdmin" />
        Login as Administrator
    </label>

    <button type="submit">SIGN IN</button>

    <div class="links">
        <a href="#" id="showForgot">Forgot password?</a><br>
        <a href="#" id="showRegister">Create an account</a>
    </div>
</form>

    </div>

    <div class="register-container hidden">
    <img src="/Images/Green Classic Four Leaf Clover Geometric Logo.png" alt="Lucky Charm" class="logo" style="width:320px; height:auto;">

        <h2>Create Account</h2>
        <form id="registerForm">
            <input type="text" placeholder="Name" id="FirstName" name="FirstName" required>
            <input type="text" placeholder="Last name" id="LastName" name="LastName" required>
            <input type="tel" placeholder="Phone number" id="PhoneNumber" name="PhoneNumber" required>
            <input type="date" placeholder="Date of birth" id="DateOfBirth" name="DateOfBirth">
            <input type="email" placeholder="Email" required id="Email" name="Email">
            <input type="text" placeholder="Username" required id="UserName" name="UserName">
            <input type="password" placeholder="Password" required id="Password" name="Password">
            <button type="submit">REGISTER</button>

            <div class="links">
                <a href="#" id="showLogin">Back to Login</a>
            </div>
        </form>
    </div>

    <!-- New Forgot Password container -->
    <div class="forgot-container hidden">
    <img src="/Images/Green Classic Four Leaf Clover Geometric Logo.png" alt="Lucky Charm" class="logo" style="width:320px; height:auto;">

        <h2>Forgot Password</h2>
        <form id="forgotForm">
            <input type="email" placeholder="Enter your email" required>
            <button type="submit">SEND INSTRUCTIONS</button>

            <div class="links">
                <a href="#" id="backToLogin">Back to Login</a>
            </div>
        </form>
    </div>
</body>

<script src="/js/login_script.js"></script>



